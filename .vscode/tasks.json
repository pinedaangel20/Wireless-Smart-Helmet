{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Flash",
			"type": "shell",
			"command": "${config:openocd_binary}",
			"args": [
				"-s",
				"${config:openocd_scripts}",
				"-f",
				"openocd.cfg",
				"-c",
				"program {${command:cmake.launchTargetPath}} verify reset exit"
			],
			"problemMatcher": []
		},
    {
      "label": "CMake Configure",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-S",
        ".",
        "-B",
        "build",
        "-DEXPORT_COMPILE_COMMANDS=ON"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      },
      "problemMatcher": []
    },
    {
      "label": "CMake Build",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    }	
  ]
}

