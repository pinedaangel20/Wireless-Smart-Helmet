{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Pico Debug",
			"cwd": "${workspaceFolder}",
			"executable": "${command:cmake.launchTargetPath}",
			"request": "launch",
			"type": "cortex-debug",
			"servertype": "openocd",
			"gdbPath": "arm-none-eabi-gdb",
			"device": "RP2040",
			"serverpath": "${config:openocd_binary}",
			"serverArgs": [
				"-s",
				"${config:openocd_scripts}"
			],
			"configFiles": [
				"${workspaceFolder}/openocd.cfg"
			],
			"svdFile": "${workspaceFolder}/.pico-sdk/src/rp2040/hardware_regs/rp2040.svd",
			"openOCDLaunchCommands": [
				"adapter speed 5000"
			]
		},
		{
			"name": "Pico Run",
			"cwd": "${workspaceFolder}",
			"type": "node-terminal",
			"preLaunchTask": "Flash"
		}
	]
}
